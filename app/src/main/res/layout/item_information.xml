<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_12">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_information_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/colorTextTitle"
            android:textSize="@dimen/sp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLength="8"
                android:textColor="@color/colorTextTint1"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_information_time"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/tv_app"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_app"
                android:textColor="@color/colorTextTint"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_mesage_pic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/tielu" />
</LinearLayout>
