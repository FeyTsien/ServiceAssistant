<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_insurance_date"
            android:layout_marginRight="10dp"
            android:text="保险日期*"
            android:textColor="@color/text_color333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_insurance_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:background="@drawable/edit_bg"
            android:textColor="@color/text_color333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_receiving_company"
            android:layout_marginRight="10dp"
            android:text="收货公司*"
            android:textColor="@color/text_color333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_receiving_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2"
            android:background="@drawable/edit_bg"
            android:textColor="@color/text_color333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_contact"
            android:layout_marginRight="10dp"
            android:text="联  系  人*"
            android:textColor="@color/text_color333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv4"
            android:background="@drawable/edit_bg"
            android:textColor="@color/text_color333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_contact_phone"
            android:layout_marginRight="10dp"
            android:text="联系电话*"
            android:textColor="@color/text_color333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv5"
            android:background="@drawable/edit_bg"
            android:textColor="@color/text_color333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="保险说明*"
            android:textColor="@color/text_color333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_insurance_that"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/tv6"
            android:background="@drawable/edit_bg"
            android:textColor="@color/text_color333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_login"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>