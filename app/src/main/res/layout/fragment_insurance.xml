<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_142"
        android:background="@drawable/side_nav_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_17"
        android:background="@drawable/layout_bg_white"
        android:elevation="@dimen/dp_5"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_18"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_25">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_receiving_company"
                android:layout_marginRight="@dimen/dp_20"
                android:text="收货公司:"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_receiving_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:background="@null"
                android:hint="请输入收货公司"
                android:gravity="top"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/item_bg">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_insurance_date"
                android:layout_marginRight="@dimen/dp_20"
                android:text="保险日期:"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_insurance_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv2"
                android:background="@null"
                android:hint="请选择保险日期"
                android:drawableRight="@mipmap/icon_calendar"
                android:gravity="top"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/item_bg">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_contact"
                android:layout_marginRight="@dimen/dp_20"
                android:text="联  系  人:"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv4"
                android:hint="请输入联系人姓名"
                android:background="@null"
                android:gravity="top"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/item_bg">

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_contact_phone"
                android:layout_marginRight="@dimen/dp_20"
                android:text="联系电话:"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_contact_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv5"
                android:background="@null"
                android:hint="请输入联系电话"
                android:gravity="top"
                android:inputType="phone"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/item_bg">

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:text="保险说明:"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_insurance_that"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv6"
                android:hint="请输入保险说明"
                android:background="@null"
                android:gravity="top"
                android:textColor="@color/text_color333333"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</RelativeLayout>