<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shipment_company"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:text="发货公司*" />

        <TextView
            android:id="@+id/tv_shipment_company"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_receiving_company"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:text="收货公司*" />

        <TextView
            android:id="@+id/tv_receiving_company"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shipment_date"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:text="发货日期*" />

        <TextView
            android:id="@+id/tv_shipment_date"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_contact"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:text="联  系  人*" />

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_contact_phone"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:text="联系电话*" />

        <TextView
            android:id="@+id/tv_contact_phone"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_alignBottom="@+id/tv_shipment_that"
            android:layout_marginRight="10dp"
            android:text="发货说明*" />

        <TextView
            android:id="@+id/tv_shipment_that"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color333333"
            android:layout_toRightOf="@+id/tv6" />
    </RelativeLayout>

</LinearLayout>